@model Desastres.Web.Models.FuncionViewModel

@{
    ViewData["Title"] = "Crear";
}

<h2>Crear</h2>

<h4>Desastres</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddDesastre">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">

                <label asp-for="DesastresId" class="control-label"></label>
                <select asp-for="DesastresId" asp-items="Model.Desastres" class="form-control"></select>
                <span asp-validation-for="DesastresId" class="text-danger"></span>

            </div>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <input type="hidden" asp-for="EntidadesId" />
                <a asp-action="Index" class="btn btn-success">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


